<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.tobacco.xinyiyun.knowledge.view.NoScollViewPager
        android:id="@+id/vp_home"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

    </com.tobacco.xinyiyun.knowledge.view.NoScollViewPager>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_05"
        android:layout_weight="0"
        android:background="@drawable/horizontal_line_gray" />

    <android.support.design.widget.BottomNavigationView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/bnv_menus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_weight="0"
        app:menu="@menu/menu_home_bottom_navigation" />

</LinearLayout>
