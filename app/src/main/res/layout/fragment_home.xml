<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_bg"
    android:orientation="vertical">

    <com.jude.rollviewpager.RollPagerView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/rpv_gallery"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        app:rollviewpager_hint_alpha="0"
        app:rollviewpager_hint_color="@color/transparent"
        app:rollviewpager_hint_paddingBottom="5dp"
        app:rollviewpager_hint_paddingLeft="16dp"
        app:rollviewpager_hint_paddingRight="16dp"
        app:rollviewpager_hint_paddingTop="16dp"
        app:rollviewpager_play_delay="3000">
    </com.jude.rollviewpager.RollPagerView>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_05"
        android:background="@drawable/horizontal_line_gray" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_05"
        android:layout_marginTop="5dp"
        android:background="@drawable/horizontal_line_gray" />


    <android.support.v7.widget.RecyclerView
        android:id="@+id/rcl_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white" />

</LinearLayout>
