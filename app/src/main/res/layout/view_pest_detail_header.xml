<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tx_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp"
        android:paddingLeft="15dp"
        android:paddingTop="10dp"
        android:text="烟草黑茎病"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tx_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:text="2016年12月13号"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:text="金叶在线"
            android:textColor="@color/colorPrimary"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:text="阅读："
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tx_read"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8"
            android:textSize="12sp" />

    </LinearLayout>

    <com.jude.rollviewpager.RollPagerView
        android:id="@+id/rpv_gallery"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="12dp"
        app:rollviewpager_hint_alpha="80"
        app:rollviewpager_hint_color="@color/gray_bg"
        app:rollviewpager_hint_paddingBottom="16dp"
        app:rollviewpager_hint_paddingLeft="16dp"
        app:rollviewpager_hint_paddingRight="16dp"
        app:rollviewpager_hint_paddingTop="16dp"
        app:rollviewpager_play_delay="3000" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_05"
        android:background="@drawable/horizontal_line_gray"></TextView>

</LinearLayout>


